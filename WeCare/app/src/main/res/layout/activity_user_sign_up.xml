<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".userSignUp">

    <ImageView
        android:id="@+id/ivTopImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/unknown" />
    <TextView
        android:layout_below="@+id/ivTopImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLogin"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginStart="35dp"
        android:textStyle="bold"

        />
    <EditText
        android:layout_below="@+id/tvLogin"
        android:id="@+id/etNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:inputType="text"
        android:hint="Username"/>

    <EditText
        android:id="@+id/etNewPass"
        android:layout_below="@+id/etNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textPassword"
        android:hint="Password"/>

    <TextView
        android:id="@+id/tvPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNewPass"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="By signing up you agree to our Terms of Use and Privacy Policy" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/tvPrivacy"
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd    ="20dp"
        android:background="@drawable/button_layout"
        android:text="Sign up" />
    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnCreate"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Already have an account? Log in"
         />
</RelativeLayout>